{
  "port": 3333,
  "decoration": {
    "bgcolor": "#000",
    "fgcolor": "#FFF",
    "title": "ytoff"
  },
  "response": {
    "error": {
      "html": [
        "<h1>error</h1>"
      ]
    },
    "home": {
      "content": "text/html",
      "html": [
        "<html>",
        "  <head>",
        "    <title>{title}</title>",
        "  </head>",
        "  <body bgcolor=\"{bgcolor}\" text=\"{fgcolor}\"><center><tt>",
        "      <h1>{title}</h1>",
        "      <p>",
        "        <i>Watch Youtube videos offline.</i>",
        "      </p>",
        "  </tt></center></body>",
        "</html>"
      ]
    },
    "process": {
      "content": "text/html",
      "html": [
        "<html>",
        "  <head>",
        "    <title>{title}</title>",
        "  </head>",
        "  <body bgcolor=\"{bgcolor}\" text=\"{fgcolor}\"><center><tt>",
        "      <h1>{title}</h1>",
        "      <p>",
        "        [<a href=\"/?v={code}\">this</a>]",
        "        [<a href=\"https://www.youtube.com/watch?v={code}\">youtube</a>]",
        "      </p>",
        "      <p>",
        "        <i>Processing... Queue length {lenq}.</i>",
        "      </p>",
        "      <p>",
        "        Click to <a href=\"/?v={code}\">reload</a>.</i>",
        "      </p>",
        "  </tt></center></body>",
        "</html>"
      ]
    },
    "raw": {
      "content": "video/mp4"
    },
    "video": {
      "content": "text/html",
      "html": [
        "<html>",
        "  <head>",
        "    <title>{title}</title>",
        "  </head>",
        "  <body bgcolor=\"{bgcolor}\" text=\"{fgcolor}\"><center><tt>",
        "      <h1>{title}</h1>",
        "      <p>",
        "        [<a href=\"/?v={code}\">this</a>]",
        "        [<a href=\"https://www.youtube.com/watch?v={code}\">youtube</a>]",
        "      </p>",
        "      <p>",
        "        <video width=\"560\" height=\"315\" controls>",
        "          <source src=\"raw/{code}.mp4?v={code}\" type=\"video/mp4\">",
        "          Your browser does not support the video tag.",
        "        </video>",
        "      </p>",
        "  </tt></center></body>",
        "</html>"
      ]
    }
  },
  "youtube-dl": {
    "options": {
      "format": "bestvideo[ext=mp4,height<=480]+bestaudio[ext=m4a,height<=480]/mp4",
      "outtmpl": "../raw/%(id)s.mp4"
    },
    "max-dequeue": 64,
    "max-queue": 32
  }
}
